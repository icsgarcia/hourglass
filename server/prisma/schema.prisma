generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TEACHER
}

enum TeacherRole {
  OWNER
  CO_TEACHER
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model User {
  id         String @id @default(uuid())
  firstName  String
  middleName String
  lastName   String
  role       Role   @default(STUDENT)
  email      String @unique
  password   String

  student Student?
  teacher Teacher?

  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  classroomInvitations ClassroomInvitation[]
}

model Student {
  id   String @id
  user User   @relation(fields: [id], references: [id], onDelete: Cascade)

  course    String
  yearLevel Int

  classroomStudents ClassroomStudent[]
  attendanceLogs    AttendanceLog[]
}

model Teacher {
  id   String @id
  user User   @relation(fields: [id], references: [id], onDelete: Cascade)

  department String

  classrooms           Classroom[]
  classroomTeachers    ClassroomTeacher[]
  classroomInvitations ClassroomInvitation[]
}

model Classroom {
  id        String @id @default(uuid())
  name      String
  course    String
  yearLevel Int

  ownerId String
  owner   Teacher @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  teachers             ClassroomTeacher[]
  students             ClassroomStudent[]
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  classroomInvitations ClassroomInvitation[]
  attendanceLogs       AttendanceLog[]
}

model ClassroomTeacher {
  classroomId String
  classroom   Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)

  teacherId String
  teacher   Teacher @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  role TeacherRole @default(CO_TEACHER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([classroomId, teacherId])
}

model ClassroomStudent {
  classroomId String
  classroom   Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)

  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([classroomId, studentId])
}

model ClassroomInvitation {
  id String @id @default(uuid())

  classroomId String
  classroom   Classroom @relation(fields: [classroomId], references: [id])

  invitedById String
  invitedBy   Teacher @relation(fields: [invitedById], references: [id])

  invitedUserId String
  invitedUser   User   @relation(fields: [invitedUserId], references: [id])

  role   Role
  status InvitationStatus @default(PENDING)

  createdAt   DateTime  @default(now())
  respondedAt DateTime?

  @@unique([classroomId, invitedUserId])
}

model AttendanceLog {
  id String @id @default(uuid())

  classroomId String
  classroom   Classroom @relation(fields: [classroomId], references: [id], onDelete: Cascade)

  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  date    DateTime
  timeIn  DateTime
  timeOut DateTime?

  totalMinutes Int?

  createdAt DateTime @default(now())

  @@unique([classroomId, studentId, date])
}
